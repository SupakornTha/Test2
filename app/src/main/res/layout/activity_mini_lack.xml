<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="362dp"
            android:layout_height="match_parent"
            android:background="#2b2b2b"
            android:padding="8dp">

            <TextView
                android:id="@+id/Lack"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:text="Lack : "
                android:textColor="#dbdbdb"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Lackname"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="214dp"
                android:layout_toEndOf="@+id/Lack"
                android:text="lackname"
                android:textColor="#dbdbdb"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Lack"
                android:layout_alignParentStart="true"
                android:layout_marginStart="31dp"
                android:layout_marginTop="10dp"
                android:text="Day :"
                android:textColor="#dbdbdb" />

            <TextView
                android:id="@+id/DayValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Lackname"
                android:layout_marginStart="6dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/Day"
                android:text="DayValue"
                android:textColor="#dbdbdb" />

            <TextView
                android:id="@+id/Quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Day"
                android:layout_alignParentStart="true"
                android:layout_marginStart="31dp"
                android:layout_marginTop="5dp"
                android:text="Quantity :"
                android:textColor="#dbdbdb" />

            <TextView
                android:id="@+id/QuantityValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/DayValue"
                android:layout_marginStart="6dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/Quantity"
                android:text=" QuantityVlaue"
                android:textColor="#dbdbdb" />

            <TextView
                android:id="@+id/Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Quantity"
                android:layout_alignParentStart="true"
                android:layout_marginStart="31dp"
                android:layout_marginTop="5dp"
                android:text="Status :"
                android:textColor="#dbdbdb" />

            <TextView
                android:id="@+id/StatusValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/QuantityValue"
                android:layout_marginStart="6dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/Status"
                android:text="StatusValue"
                android:textColor="#dbdbdb" />

            <TextView
                android:id="@+id/pH"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="84dp"
                android:background="@color/colorPrimary"
                android:text="pH"
                android:textStyle="bold"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/phValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="16dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="pHValue" />

            <TextView
                android:id="@+id/EC"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pH"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="84dp"
                android:background="@color/colorPrimary"
                android:textStyle="bold"
                android:text="EC"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/ECValue"
                android:layout_marginLeft="39dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Day"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="ECValue" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>