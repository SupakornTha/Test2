<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="362dp"
            android:layout_height="match_parent"
            android:background="#494748"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="9dp"
                android:layout_marginTop="15dp"
                android:background="@color/colorPrimary"
                android:cropToPadding="false"
                android:padding="4dp"
                android:src="@drawable/greenhouse_stage"/>

            <TextView
                android:id="@+id/GreenhouseTile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="17dp"
                android:layout_toRightOf="@id/imageView1"
                android:text="Greenhouse :"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textViewGreenhouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/GreenhouseTile"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="103dp"
                android:layout_marginTop="17dp"
                android:layout_toRightOf="@id/imageView1"
                android:text="greenhouse"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/Zone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewGreenhouse"
                android:layout_marginLeft="39dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/imageView1"
                android:background="@color/colorPrimary"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Zone"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewZone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Zone"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="-26dp"
                android:layout_toRightOf="@id/imageView1"
                android:text="zone"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnPress1"
                android:layout_width="177dp"
                android:layout_height="37dp"
                android:layout_below="@+id/Zone"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="34dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="14dp"
                android:layout_toEndOf="@+id/imageView1"
                android:text="PRESS" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>